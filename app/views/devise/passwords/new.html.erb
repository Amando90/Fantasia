<%= stylesheet_link_tag    'user', media: 'all' %>

<div class="forgot-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Forgot your password?</h2>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
            <%= f.error_notification %>
            <div class="panel-body">
			    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class: 'input-lg' } %>
			    <%= f.button :submit, "Send me reset password instructions", class: 'btn-lg btn-info btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>